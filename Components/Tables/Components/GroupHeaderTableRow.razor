@typeparam TableItem
@inherits GroupHeaderTableRowBase<TableItem>

@if (Group != null)
{
    <AllColumnRow TableItem="TableItem" CssClass="grouping-row">
        <div class="me-2 cursor-pointer @ExpandedCss()" @onclick="ToogleExpanded" />
        @if (Group?.GroupingTemplate != null)
        {
            @Group.GroupingTemplate(Group)
        }
        else
        {
            <strong>   @($"{Group?.Key ?? "*No Value*"} ({Group.Count})")</strong>
        }
    </AllColumnRow>
}